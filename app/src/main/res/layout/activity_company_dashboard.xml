<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    tools:actionBarNavMode="tabs"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="#eaf5f5f5"
    tools:context=".activities.CompanyDashboardActivity">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        app:titleTextColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:popupTheme="@style/AppTheme.PopupOverlay"/>

    <github.chenupt.springindicator.SpringIndicator
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:siTextSize="12sp"
        app:siIndicatorColors="@array/colors"
        app:siTextColor="@color/colorPrimaryDark"
        app:siSelectedTextColor="@android:color/black"
        app:siIndicatorColor="@color/grey"
        android:id="@+id/indicatordb"
        android:layout_width="match_parent"
        android:layout_height="35sp"/>
    <android.support.v4.view.ViewPager
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/companydbviewPagerLayout"
        >
    </android.support.v4.view.ViewPager>


</LinearLayout>
