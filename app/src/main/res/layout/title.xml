<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#eaf5f5f5"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <android.support.v7.widget.CardView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        app:cardCornerRadius="2sp"
        app:cardElevation="5dp"
        android:layout_height="wrap_content">
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                      xmlns:tools="http://schemas.android.com/tools"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:id="@+id/transitionsContainerrr"
                      android:orientation="vertical">
            <RelativeLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/relativelayout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <ImageButton
                    android:padding="12sp"
                    android:layout_marginTop="12dp"
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="160sp"
                    android:layout_gravity="end"
                    android:scaleType="centerCrop"
                    android:adjustViewBounds="true"
                    android:layout_centerInParent="true"
                    android:id="@+id/imagText"
                    android:src="@drawable/bg"
                    android:alpha=".1"
                    />

                <TextView
                    android:id="@+id/jobText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="20dp"
                    android:gravity="center|bottom"
                    android:textColor="#000000"
                    android:textSize="25sp"
                    android:textStyle="bold"/>
            </RelativeLayout>

            <TextView
                android:id="@+id/typText"
                android:padding="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:textStyle="italic"
                android:textColor="@color/grey"
                android:textSize="12sp"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="2sp"
                android:background="@color/black"
                android:visibility="gone"></View>
            <TextView
                android:id="@+id/expText"
                android:padding="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:textStyle="normal"
                android:textSize="12sp"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="2sp"
                android:background="@color/black"
                android:visibility="gone"></View>
            <TextView
                android:id="@+id/salText"
                android:padding="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:textStyle="normal"
                android:textSize="12sp"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="2sp"
                android:background="@color/black"
                android:visibility="gone"></View>
            <TextView
                android:id="@+id/comText"
                android:padding="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:textStyle="normal"
                android:textColor="@color/grey"
                android:textSize="12sp"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="2sp"
                android:background="@color/black"
                android:visibility="gone"></View>
            <TextView
                android:layout_marginLeft="10sp"
                android:id="@+id/indText"
                android:padding="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:textStyle="normal"
                android:textColor="@color/grey"
                android:textSize="12sp"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="2sp"
                android:background="@color/black"
                android:visibility="gone"></View>
            <TextView
                android:layout_marginLeft="10sp"
                android:id="@+id/jobdescText"
                android:padding="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:textStyle="normal"
                android:textColor="@color/grey"
                android:textSize="12sp"
                />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="italic"
                android:text="apply"
                android:id="@+id/apply"
                android:layout_marginBottom="6dp"
                android:textColor="@color/white"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:background="@drawable/ripple"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</ScrollView>